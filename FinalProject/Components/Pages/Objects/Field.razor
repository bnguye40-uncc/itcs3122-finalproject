<div class="@Class">

    <div class="display @showDisplay">
        @if (Class == "name") {
            <strong>@Value</strong>
        } else {
            <strong>@Name: </strong>
            @if (Class == "url") {
                <a href=@Value>@Value</a>
            } else {
                @Value
            }
        }
        <button class="edit-field" @onclick="ToggleEditMode">
            @if (Class == "name") {
                <img src="images/edit.svg" width="28" height="28"/>
            } else {
                <img src="images/edit.svg" width="18" height="18"/>
            }
        </button>
    </div>

    <div class="editing @showEditing">
        <label>
            <!-- Field Name -->
            @if (Class == "custom-field") {
                <input class="field-name text-input" placeholder="Field Name..." @bind="@newName" />
                <span>: </span>
            } else if (Class != "name") {
                <strong>@Name:</strong>
            }
            <!-- Field Value -->
            @if (Class == "description") {
                <textarea placeholder="@Placeholder" @bind="@newValue" rows="4" cols="130"></textarea>
            } else {
                <input class="field-value text-input" placeholder="@Placeholder" @bind="@newValue"/>
            }
            <button class="set-value" @onclick="SetValue">
                <img src="images/check.svg" width="18" height="18"/>
            </button>
            <button class="cancel-edit" @onclick="CancelEdit">
                <img src="images/xmark.svg" width="18" height="18"/>
            </button>
        </label>
    </div>

</div>