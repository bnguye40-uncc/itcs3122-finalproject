@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage

<div class="folder-container"> 
    <NavLink class="@($"folder {Class}")" @onclick="Expand">
        @Name
    </NavLink>

    @if (isExpanded)
    {
        <ul>
        @foreach (var item in Items) {
            <li>
            @if (item.IsFolder == true)
            {
                <Folder Class="subfolder" Name="@item.Name" Description="@item.Description" />
            } else {
                <NavLink href="/bookmark">@item.Name</NavLink>
            }
            </li>
        }
        </ul>
    }
</div>

@code {
    protected override void OnInitialized()
    {   
        localStorage.SetItem(Name, this);
        var folder = localStorage.GetItem<Folder>(Name);

        Items.Add(new Folder());
        Items.Add(new Bookmark());
    }

    private void Expand() {
        isExpanded = !isExpanded;
    }
}